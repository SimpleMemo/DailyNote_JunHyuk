<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>

<!--    bottom dialog-->
    <style name="CustomBottomSheetDialogTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">512dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

<!--    cardView-->
    <style name="CustomButtonTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="materialCardViewStyle">@style/CustomButton</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/mainButtonColor</item>
        <item name="backgroundColor">@android:color/transparent</item>
    </style>

<!--    textView-->
    <style name="CustomTextTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:textViewStyle">@style/CustomText</item>
    </style>

    <style name="CustomText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/mainButtonColor</item>
    </style>

    <!--    recyclerViewItem-->
    <style name="CustomRecyclerViewTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="materialCardViewStyle">@style/CustomItem</item>
    </style>

    <style name="CustomItemTextTheme" parent="Theme.AppCompat.Light">
        <item name="android:textViewStyle">@style/CustomItemText</item>
    </style>

    <style name="CustomItemText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomItem" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/backgroundDark</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

<!--    background-->
    <style name="CustomBackground" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">@color/black</item>
    </style>

    <!--    settingIcon-->
    <style name="CustomSettingButtonTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:src">@drawable/ic_settings_dark</item>
    </style>

    <!--    backButtonIcon-->
    <style name="CustomBackButtonTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:src">@drawable/ic_back_dark</item>
    </style>

    <!-- widgetBackground-->
    <style name="CustomWidgetBackground" parent="Theme.MaterialComponents.DayNight">
        <item name="background">@drawable/ic_widget_back_dark</item>
    </style>

</resources>