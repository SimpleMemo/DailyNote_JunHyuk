<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:theme="@style/CustomWidgetBackground"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="22dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/inter_bold"
            android:text="@string/today_s_diary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:theme="@style/CustomItemTextTheme" />

        <TextView
            android:id="@+id/widgetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/inter_bold"
            android:text="@string/title_sample"
            android:textSize="15sp"
            android:textStyle="bold"
            android:theme="@style/CustomItemTextTheme" />

        <TextView
            android:id="@+id/widgetContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:text="@string/content_sample"
            android:textSize="15sp"
            android:theme="@style/CustomItemTextTheme" />

    </LinearLayout>

</FrameLayout>