<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:theme="@style/CustomWidgetBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today_s_diary"
        android:fontFamily="@font/inter_bold"
        android:textSize="20sp"
        android:theme="@style/CustomItemTextTheme"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"/>

    <TextView
        android:id="@+id/widgetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/title_sample"
        android:fontFamily="@font/inter_bold"
        android:textSize="15sp"
        android:theme="@style/CustomItemTextTheme"
        android:textStyle="bold"
        android:layout_marginStart="14dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/widgetContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/content_sample"
        android:theme="@style/CustomItemTextTheme"
        android:ellipsize="end"
        android:textSize="15sp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="6dp"/>

</LinearLayout>